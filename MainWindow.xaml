<Window x:Class="GA_JuanHernandez_RTB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GA_JuanHernandez_RTB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <RichTextBox Height="294" Width="331" Canvas.Left="434" Canvas.Top="70" HorizontalAlignment="Center" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph>
                    <Run Text="" Name="rtbDisplay"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="txtUserInput" Canvas.Left="280" TextWrapping="Wrap" Canvas.Top="70" Width="120"/>
        <Label Content="Type a Message: " Canvas.Left="176" Canvas.Top="66" HorizontalAlignment="Left" VerticalAlignment="Center" Width="99"/>
        <Button x:Name="btnDisplay" Content="Display" Canvas.Left="280" Canvas.Top="93" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Click="btnDisplay_Click"/>

    </Canvas>
</Window>
